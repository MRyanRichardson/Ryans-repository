@model List<GuildCarsModel.Model.Specials>
@{
    ViewBag.Title = "Specials";
}
<div class="container" id="PageColor">
    <h2 id="HeaderAlign">Specials</h2>
    @foreach (var special in Model)
    {
        <div class="row" id="TableBorder">
            <div class="col-md-2">
                <h1 id="AlignCenter">$</h1>
            </div>
            <div class="col-md-10">
                <h3 style="font-weight:bolder;">@special.SpecialType</h3>
                <p>@special.SpecialDescription</p>
            </div>
        </div>
    }
</div>
