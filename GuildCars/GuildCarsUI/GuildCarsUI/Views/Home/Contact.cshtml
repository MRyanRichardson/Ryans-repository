@model string
@{
    ViewBag.Title = "Contact";
}
<div class="container" id="PageColor">
    <h3 id="HeaderAlign">Contact Us</h3>
    <div class="row form-group" id="HeaderAlign">
        <label for="contactName">Name</label><br />
        <input type="text" id="contactName" class="form-control" placeholder="Firstname Lastname" />
    </div>
    <div class="row form-group" id="HeaderAlign">
        <label for="contactEmail">Email</label><br />
        <input type="email" id="contactEmail" class="form-control" placeholder="Email" />
    </div>
    <div class="row form-group" id="HeaderAlign">
        <label for="contactPhone">Phone</label><br />
        <input type="text" id="contactPhone" class="form-control" placeholder="Phone" />
    </div>
    <div class="row form-group" id="HeaderAlign">
        <label for="contactMessage">Message</label><br />
        <textarea type="text" id="contactMessage" class="form-control" style="height:200px;">@Model</textarea>
    </div>
    <div style="margin-left:13px;" class="btn-group form-group">
        @Html.ActionLink("Submit", "Contact", null, new { @class = "btn btn-primary" })
    </div>
</div>