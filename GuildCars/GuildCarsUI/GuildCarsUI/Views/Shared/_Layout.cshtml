<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="separator"></li>
                    <li>@Html.ActionLink("New Inventory", "New", "Inventory")</li>
                    <li class="separator"></li>
                    <li>@Html.ActionLink("Used Inventory", "Used", "Inventory")</li>
                    <li class="separator"></li>
                    <li>@Html.ActionLink("Specials", "Specials", "Home")</li>
                    <li class="separator"></li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Sales")))
                    {
                        <li class="separator"></li>
                        <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                        if (User.IsInRole("Admin"))
                        {
                            <li class="separator"></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                                    <li>@Html.ActionLink("Makes", "Makes", "Admin")</li>
                                    <li>@Html.ActionLink("Models", "Models", "Admin")</li>
                                    <li>@Html.ActionLink("Specials", "Specials", "Admin")</li>
                                    <li>@Html.ActionLink("Users", "Users", "Admin")</li>
                                    <li>@Html.ActionLink("Vehicles", "Vehicles", "Admin")</li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
              
            </div>
            <div class="navbar-right">
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>