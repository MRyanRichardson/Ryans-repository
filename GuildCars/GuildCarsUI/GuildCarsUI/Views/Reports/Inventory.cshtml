@model GuildCarsUI.Models.ViewModel.InventoryVM


@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory</h2>
<h3>New Vehicles</h3>
<div class="row">
    <div class="col-xs-6">
        <div class="tableFixHead">
            <table class="table table-bordered table-striped mb-0" style="border:2px solid #333;">
                <tr>
                    <th>Year</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Count</th>
                    <th>Stock Value</th>

                </tr>
                @foreach (var invNew in Model.InventoryNew)
                {
                    <tr>
                        <td>@invNew.Year</td>
                        <td>@invNew.Make</td>
                        <td>@invNew.Model</td>
                        <td>@invNew.Count</td>
                        <td>@invNew.StockValue</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


<h3>Used Vehicles</h3>
<div class="row">
