                    <th>Year</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Count</th>
                    <th>Stock Value</th>

                </tr>
                @foreach (var invUsed in Model.InventoryUsed)
                {
                    <tr>
                        <td>@invUsed.Year</td>
