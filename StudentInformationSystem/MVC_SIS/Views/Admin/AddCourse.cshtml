@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "AddCourse";
}
<div class="row">
    <div class="col-xs-12">
        <h3>Add Course</h3>
        @Html.ActionLink("Return to List", "Courses", "Admin")
        @Html.ValidationSummary()
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.HiddenFor(m => m.CourseId, new { @class = "form-control", placeholder = "Course Id" })
                <label>Course</label>
                @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", placeholder = "Course Name" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>